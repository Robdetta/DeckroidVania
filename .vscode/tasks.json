{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean and build",
      "type": "shell",
      "command": "dotnet clean && dotnet build",
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build"],
      "problemMatcher": "$msCompile"
    }
  ]
}
